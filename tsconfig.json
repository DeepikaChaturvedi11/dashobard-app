{
  "compilerOptions": {
    "target": "es6",                          // Target modern JavaScript
    "lib": ["dom", "dom.iterable", "esnext"], // Include DOM and ES features
    "allowJs": true,                          // Allow JavaScript files
    "skipLibCheck": true,                     // Skip type checking for library files
    "strict": true,                           // Enable strict type-checking
    "forceConsistentCasingInFileNames": true, // Enforce consistent file names
    "esModuleInterop": true,                  // Enable ES module interoperability
    "module": "esnext",                       // Use ESNext module system
    "moduleResolution": "node",               // Resolve modules using Node's algorithm
    "resolveJsonModule": true,                // Allow importing JSON files
    "isolatedModules": true,                  // Ensure each file can be compiled in isolation
    "jsx": "react"                            // Use React JSX transformation
  },
  "include": ["src"],                         // Include files in the src folder
  "exclude": ["node_modules", "dist"]         // Exclude unnecessary folders
}
